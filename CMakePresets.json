{
  "version": 4,
  "configurePresets": [
    {
      "name": "vcpkg",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "debug-linux-amd64",
      "displayName": "Debug for Linux-x86-64",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/cmake-build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_C_FLAGS": "-g -glldb -std=gnu17 -Wall -Wextra -Wpedantic -Wno-unused-parameter -Wno-unused-command-line-argument -fuse-ld=lld -fPIC -fPIE -fsanitize=undefined",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-g -glldb -std=gnu++23 -Wall -Wextra -Wpedantic -Wno-unused-parameter -Wno-unused-command-line-argument -fuse-ld=lld -fPIC -fPIE -fsanitize=undefined",
        "VCPKG_TARGET_ARCHITECTURE": "x64",
        "VCPKG_LIBRARY_LINKAGE": "static",
        "VCPKG_CMAKE_SYSTEM_NAME": "Linux",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "release-linux-amd64-fast",
      "displayName": "Release for Linux-x86-64 (speed optimized)",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/cmake-build-release-fast",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_C_FLAGS": "-O3 -std=gnu17 -Wall -Wextra -Wpedantic -Wno-unused-parameter -Wno-unused-command-line-argument -fuse-ld=lld -fPIC -fPIE -fsanitize=undefined",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-O3 -std=gnu++23 -Wall -Wextra -Wpedantic -Wno-unused-parameter -Wno-unused-command-line-argument -fuse-ld=lld -fPIC -fPIE -fsanitize=undefined",
        "VCPKG_TARGET_ARCHITECTURE": "x64",
        "VCPKG_LIBRARY_LINKAGE": "static",
        "VCPKG_CMAKE_SYSTEM_NAME": "Linux",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "release-linux-amd64-size",
      "displayName": "Release for Linux-x86-64 (size optimized)",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/cmake-build-release-size",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_C_FLAGS": "-Oz -std=gnu17 -Wall -Wextra -Wpedantic -Wno-unused-parameter -Wno-unused-command-line-argument -fuse-ld=lld -fPIC -fPIE -fsanitize=undefined",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-Oz -std=gnu++23 -Wall -Wextra -Wpedantic -Wno-unused-parameter -Wno-unused-command-line-argument -fuse-ld=lld -fPIC -fPIE -fsanitize=undefined",
        "VCPKG_TARGET_ARCHITECTURE": "x64",
        "VCPKG_LIBRARY_LINKAGE": "static",
        "VCPKG_CMAKE_SYSTEM_NAME": "Linux",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    }
  ]
}
